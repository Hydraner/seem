/**
 * Implements hook_block_build_HOOK_alter().
 */
function seem_block_build_system_main_block_alter(array &$build, \Drupal\Core\Block\BlockPluginInterface $block) {
  $build['#contextual_links'] = [];
}

/**
 * Implements hook_contextual_links_view_alter().
 */
function seem_contextual_links_view_alter(&$element, $items) {
  if (isset($items['seem.display_config'])) {
    $link = &$element['#links']['seemdisplay-config'];
    $link['attributes']['class'][] = 'use-ajax';
    $link['attributes']['data-dialog-type'] = 'modal';
    $link['attributes']['data-dialog-options'] = Json::encode(array(
      'width' => 700,
    ) + ['display' => $items['seem.display_config']['metadata']['display'], 'parameters' =>  $items['seem.display_config']['metadata']['parameters']]);

    $route_name = $items['seem.display_config']['metadata']['route'];
    $route_parameters = ['seem_display' => $items['seem.display_config']['metadata']['seem_display_id']];
    $options = Json::encode(['display' => $items['seem.display_config']['metadata']['display'], 'parameters' =>  $items['seem.display_config']['metadata']['parameters']]);
    $element['#links']['seemdisplay-config']['url'] = Url::fromRoute($route_name, $route_parameters, $options);
  }
}